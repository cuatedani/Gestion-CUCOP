mixin filters()
  .white-container.mb-4
    .white-header-container
      h4.white-title Filtros
      a(href="/cucop/list-products/create").btn.btn-link.p-0 Agregar producto a lista
    hr.white-hr
    .white-body-container
      .row
        .col
          label.form-label Lista
          input(type="text" placeholder="Ej. 123" v-model="listId").form-control
        .col
          label.form-label Producto
          input(type="text" placeholder="Ej. 123" v-model="productId").form-control
      .row.mt-3
        .col
          label.form-label Cantidad
          input(type="text" placeholder="Ej. 10" v-model="quantity").form-control
        .col
          label.form-label Precio
          input(type="text" placeholder="Ej. 10.00" v-model="price").form-control
        .col
          label(for="active").form-label Activo
          select(id="active" v-model="active").form-select
            option(value="") Todos
            option(value="1") Activo
            option(value="0") Inactivo