mixin filters()
  .white-container.mb-4
    .white-header-container
      h4.white-title Filtros
      a(href="/time/users/create").btn.btn-link.p-0 Agregar usuario
    hr.white-hr
    .white-body-container
      .row
        .col
          label.form-label Nombres de usuario
          input(type="text" placeholder="Ej. Carlos" v-model="firstNames").form-control
        .col
          label.form-label Apellidos de usuario
          input(type="text" placeholder="Ej. Ramirez" v-model="lastNames").form-control
        .col
          label.form-label Correo electr√≥nico
          input(type="text" placeholder="Ej. email@example.com" v-model="email").form-control
      .row.mt-3
        .col
          label.form-label Rol
          select(name="rol" v-model="rol").form-select
            option(value="") Todos
            option(value="normal") Normal
            option(value="admin") Administrador
        .col
          label(for="active").form-label Activo
          select(id="active" v-model="active").form-select
            option(value="") Todos
            option(value="1") Activo
            option(value="0") Inactivo