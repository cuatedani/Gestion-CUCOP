mixin filters()
  .white-container.mb-4
    .white-header-container
      h4.white-title Filtros
      a(href="/cucop/suppliers/create").btn.btn-link.p-0 Agregar Proveedor
    hr.white-hr
    .white-body-container
      .row
        .col
          label.form-label Nombre de Proveedor
          input(type="text" placeholder="Ej. Papeleria Mariposa" v-model="name").form-control
        .col
          label.form-label TIN
          input(type="text" placeholder="Ej. 15-3424" v-model="tin").form-control
      .row.mt-3
        .col
          label.form-label Descripción
          input(type="text" placeholder="Ej. Extenso Surtido" v-model="description").form-control
      .row.mt-3
        .col
          label.form-label Dirección
          input(type="text" placeholder="Ej. Av.Mexico #122" v-model="address").form-control
        .col
          label.form-label Telefono
          input(type="text" placeholder="Ej. 311-100-1111" v-model="phone").form-control
      .row.mt-3
          .col
            label(for="active").form-label Activo
            select(id="active" v-model="active").form-select
              option(value="") Todos
              option(value="1") Activo
              option(value="0") Inactivo