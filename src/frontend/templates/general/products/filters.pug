mixin filters()
  .white-container.mb-4
    .white-header-container
      h4.white-title Filtros
      a(href="/cucop/products/create").btn.btn-link.p-0 Agregar producto
    hr.white-hr
    .white-body-container
      .row
        .col-10
          label.form-label Todos los campos
          input.form-control(type="text", placeholder="Ej. Lapiz, Mirador No.2", v-model="wherever")
        .col-2.btn-toggle-more-filters
          button.btn.btn-primary(data-bs-toggle="collapse", data-bs-target="#extraFilters" @click="toggleExtraFilters") {{ extraFiltersButtonText }}
      #extraFilters.row.collapse
        .row.mt-3
          .col
            label.form-label Nombre
            input(type="text" placeholder="Ej. Lapiz" v-model="name").form-control
          .col-5
            label.form-label Registro CUCOP
            input(type="text" placeholder="Ej. 20100001" v-model="iscucop").form-control
        .row.mt-3
          .col
            label.form-label Marca
            input(type="text" placeholder="Ej. Bic" v-model="brand").form-control
          .col
            label.form-label Modelo
            input(type="text" placeholder="Ej. Mirador" v-model="model").form-control
          .col
            label.form-label Unidad
            input(type="text" placeholder="Ej. 10 pzs" v-model="denomination").form-control
          .col
            label.form-label #Serie
            input(type="text" placeholder="Ej. NS00001" v-model="serialNumber").form-control
          .col
            label.form-label #Item
            input(type="text" placeholder="Ej. NI00001" v-model="itemNumber").form-control
        .row.mt-3
          .col
            label.form-label Descripci√≥n
            input(type="text" placeholder="Ej. Mirador No.2" v-model="description").form-control
          .col-2
            label(for="active").form-label Activo
            select(id="active" v-model="active").form-select
              option(value="") Todos
              option(value="1") Activo
              option(value="0") Inactivo