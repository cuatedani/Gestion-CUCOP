mixin modal(id,title,description,buttons=[])
  div(tabindex="-1" role="dialog" id=id ).modal.fade
    div(role="document").modal-dialog
      .modal-content 
        .modal-header
          h5.modal-title #{title}
          button(type="button" data-bs-dismiss="modal").btn-close
        div(id=id+"Body").modal-body
          if description
            p #{description}
        .modal-footer
          each button in buttons
            if button.type=="primary"
              button(type="button" id=button.id).btn.btn-panel-primary #{button.title}
            else if button.type=="secondary"
              button(type="button" id=button.id).btn.btn-outline-secondary #{button.title}
            else if button.type=="secondary-dismiss"
              button(type="button" data-bs-dismiss="modal" id=button.id).btn.btn-outline-secondary #{button.title}
            else if button.type=="danger"
              button(type="button" id=button.id).btn.btn-danger #{button.title}